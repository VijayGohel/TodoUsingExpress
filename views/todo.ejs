<%- include('header'); -%>

    <div class="box">
        <h1 ><%=Title%></h1>
    </div>

    <div class="box">
        <% todoItems.forEach((item)=>{%>
            <div class="tile">
                
                    <input type="checkbox">
                    <p><%=item%></p>
            </div>
        <%});%>
            
        
        <form action="/" method="post" class="tile">
            <input type="text" name="newItem" placeholder="New Item">
            <button type="submit" name="button" value="<%=Title%>">+</button>
        </form>
    </div>

<%- include('footer'); -%>